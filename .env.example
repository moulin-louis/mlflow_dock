# MLflow Webhook Configuration
# Copy this file to .env and fill in your actual values

# Webhook Secret (required)
# This should match the secret configured in your MLflow webhook
MLFLOW_WEBHOOK_SECRET=your-webhook-secret-here

# Docker Configuration (required)
# Docker registry to push images to (default: docker.io)
DOCKER_REGISTRY=docker.io
# Your Docker Hub username or registry username
DOCKER_USERNAME=your-docker-username
# Registry password for authentication (required)
DOCKER_REGISTRY_PASSWORD=your-registry-password

# Optional: Maximum age for webhook timestamps in seconds (default: 300)
# This helps prevent replay attacks
MAX_TIMESTAMP_AGE=300

# Optional: Server Port (default: 8000)
PORT=8000

# AWS Credentials (required for S3 model storage)
# These are needed if your MLflow models are stored in S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
